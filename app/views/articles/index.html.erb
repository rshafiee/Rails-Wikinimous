<div class="container">
  <div class="row justify-content-md-center mt-4">
    <% @articles.each do |article| %>
      <div class="card mb-2 ml-2 d-inline-flex w-25 card-transition">
        <div class="card-body">
          <h5 class="card-title"><%= link_to article.title, article_path(article)%></h5>
          <p class="card-text"><%= article.content %></p>
        </div>
        <div class="card-footer">
          <a href="#" class="btn btn-primary btn-sm w-25">Edit</a>
          <a href="#" class="btn btn-warning btn-sm w-25">Delete</a>
        </div>
      </div>
    <% end %>
  </div>
</div>

